<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Event App - Login</title>

    <link rel="icon" type="image/png" href="/static/images/eventapp-logo.png">
    <link rel="stylesheet" type="text/css" href="/static/stylesheets/login.css">
  </head>
  <body>
    <div class="login">
      <img class="logo" src="/static/images/eventapp-logo.png" alt="Big logo">
      <form class="login-form" method="POST" action="/login">
        <h2>Login</h2>
        <% if (typeof message !== 'undefined' && message) { %>
          <p class="message"><%= message %></p>
        <% } %>
        <input class="form-input" type="text" name="username" placeholder="username" required>
        <input class="form-input" type="password" name="password" placeholder="password" required>
        <button type="submit">Login now</button>

        <p class="signup-toggle">If you don't have an account, <a href="/register">register here</a></p>
      </form>
    </div>

    <!-- -->

    <!-- script src="http://code.jquery.com/jquery-2.0.3.min.js"></script -->
    <!-- script src="javascripts/login.js"></script -->
  </body>
</html>